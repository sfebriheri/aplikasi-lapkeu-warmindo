# ============================================================
# Environment Configuration Example
# Copy this file to .env and update with your actual values
# ============================================================

# Environment
CI_ENVIRONMENT=development

# ============================================================
# Database Configuration
# ============================================================
DB_DRIVER=postgre
DB_HOST=localhost
DB_USER=postgres
DB_PASS=your_secure_password_here
DB_NAME=lapkeu_warmindo
DB_PREFIX=

# PostgreSQL specific settings
DB_CHARSET=utf8
DB_COLLATION=utf8_unicode_ci

# ============================================================
# Application Settings
# ============================================================
APP_URL=https://localhost/aplikasi-lapkeu-warmindo/
APP_NAME=LAPKEU Warmindo

# ============================================================
# Encryption & Security
# ============================================================
# Generate a random 32-character string for encryption key
ENCRYPTION_KEY=your_encryption_key_here_must_be_32_chars_long

# CSRF Settings
CSRF_TOKEN_NAME=csrf_test_name
CSRF_COOKIE_NAME=csrf_cookie_name
CSRF_EXPIRE=7200

# ============================================================
# Email Configuration
# ============================================================
EMAIL_PROTOCOL=smtp
EMAIL_SMTP_HOST=ssl://smtp.googlemail.com
EMAIL_SMTP_USER=your_email@gmail.com
EMAIL_SMTP_PASS=your_app_specific_password
EMAIL_SMTP_PORT=465
EMAIL_FROM_NAME=LAPKEU Warmindo
EMAIL_CHARSET=utf-8

# Alternative email providers:
# Gmail: smtp_host=ssl://smtp.gmail.com, port=465 or 587
# Mailgun: smtp_host=smtp.mailgun.org, port=587
# SendGrid: smtp_host=smtp.sendgrid.net, port=587

# ============================================================
# Session Configuration
# ============================================================
SESSION_DRIVER=files
SESSION_TIMEOUT=7200
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_MATCH_IP=false

# ============================================================
# Logging
# ============================================================
LOG_THRESHOLD=1
LOG_DATE_FORMAT=Y-m-d H:i:s

# ============================================================
# File Upload Settings
# ============================================================
UPLOAD_MAX_SIZE=2048
UPLOAD_ALLOWED_TYPES=gif,jpg,jpeg,png
UPLOAD_PATH=./assets/img/profile/

# ============================================================
# API Settings (for future use)
# ============================================================
API_ENABLED=false
API_TOKEN_EXPIRES=3600

# ============================================================
# Debug Settings
# ============================================================
# Set to TRUE only in development environment
DEBUG_MODE=true

# ============================================================
# Timezone
# ============================================================
TIMEZONE=Asia/Jakarta
