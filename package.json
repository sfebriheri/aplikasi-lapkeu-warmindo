{
  "name": "lapkeu-warmindo",
  "version": "1.0.0",
  "description": "Web-based Financial Statement System (LAPKEU) for PT. Warmindo",
  "main": "index.js",
  "scripts": {
    "dev": "tailwindcss -i ./assets/css/input.css -o ./assets/css/output.css --watch",
    "build": "tailwindcss -i ./assets/css/input.css -o ./assets/css/output.css --minify",
    "scss": "sass assets/scss:assets/css --watch",
    "scss:build": "sass assets/scss:assets/css --style=compressed",
    "build:all": "npm run scss:build && npm run build"
  },
  "keywords": [
    "financial",
    "accounting",
    "lapkeu",
    "warmindo"
  ],
  "author": "LAPKEU Team",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.3.0",
    "postcss": "^8.4.24",
    "autoprefixer": "^10.4.14",
    "sass": "^1.63.6"
  },
  "dependencies": {
    "alpinejs": "^3.12.0",
    "sweetalert2": "^11.7.12",
    "chart.js": "^3.9.1",
    "datatables.net": "^1.13.4",
    "datatables.net-dt": "^1.13.4",
    "axios": "^1.4.0"
  }
}
